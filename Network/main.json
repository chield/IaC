{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "rg1Name": {
      "type": "string"
    },
    "rg1Location": {
      "type": "string",
      "defaultValue": "westeurope"
    },
    "vnet1Name": {
      "type": "string"
    }
  },
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "name": "[parameters('rg1Name')]",
      "location": "[parameters('rg1Location')]"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "vnet1",
      "resourceGroup": "[parameters('rg1Name')]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "vnetName": {
            "value": "[parameters('vnet1Name')]"
          },
          "addressPrefixes": {
            "value": [
              "10.0.0.0/8"
            ]
          },
          "subnet1Name": {
            "value": "[format('sn-01-{0}', parameters('vnet1Name'))]"
          },
          "subnet2Name": {
            "value": "[format('sn-02-{0}', parameters('vnet1Name'))]"
          },
          "subnet1AddressPrefix": {
            "value": "10.1.1.0/24"
          },
          "subnet2AddressPrefix": {
            "value": "10.1.2.0/24"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "vnetName": {
              "type": "string"
            },
            "addressPrefixes": {
              "type": "array"
            },
            "subnet1Name": {
              "type": "string"
            },
            "subnet2Name": {
              "type": "string"
            },
            "subnet1AddressPrefix": {
              "type": "string"
            },
            "subnet2AddressPrefix": {
              "type": "string"
            },
            "location": {
              "type": "string",
              "defaultValue": "[resourceGroup().location]"
            }
          },
          "functions": [],
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks",
              "apiVersion": "2020-06-01",
              "location": "[parameters('location')]",
              "name": "[parameters('vnetName')]",
              "properties": {
                "addressSpace": {
                  "addressPrefixes": "[parameters('addressPrefixes')]"
                },
                "subnets": [
                  {
                    "name": "[parameters('subnet1Name')]",
                    "properties": {
                      "addressPrefix": "[parameters('subnet1AddressPrefix')]"
                    }
                  },
                  {
                    "name": "[parameters('subnet2Name')]",
                    "properties": {
                      "addressPrefix": "[parameters('subnet2AddressPrefix')]"
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      "dependsOn": [
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', parameters('rg1Name'))]"
      ]
    }
  ]
}